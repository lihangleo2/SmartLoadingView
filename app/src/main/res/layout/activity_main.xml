<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>
<!--    android:background="@mipmap/main_bg"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="#ff0000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="100dp"
                android:id="@+id/txt_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="测试加载结果"
                android:textColor="#ffffff"
                android:gravity="center"
                />



                <!-- fullScreen 模式 -->
<!--            <com.lihang.SmartLoadingView-->
<!--                android:id="@+id/smartLoadingView"-->
<!--                android:layout_width="250dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                android:textSize="16sp"-->
<!--                android:layout_marginTop="150dp"-->
<!--                android:text="文案"-->
<!--                android:textColor="#ffffff"-->
<!--                android:background="#3069D6"-->
<!--                app:hl_corners_radius="30dp"-->
<!--                app:hl_button_type="smart_full_screen"-->
<!--                />-->

            <!-- app:hl_button_type="smart_full_screen" -->
            <!-- app:hl_animaled_textColor="#000000" -->
            <!-- app:hl_animaled_background="#f54949" -->
            <!-- app:hl_animaled_text="错误文案" -->

            <com.lihang.SmartLoadingView
                android:id="@+id/smartLoadingView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="16sp"
                android:layout_marginTop="150dp"
                android:text="点击关注"
                android:textColor="#ffffff"
                android:background="#3069D6"
                app:hl_corners_radius="30dp"
                app:hl_animaled_textColor="#000000"
                app:hl_animaled_background="#f54949"
                app:hl_animaled_text="关注成功"
                app:hl_button_type="smart_button"
                />


            <TextView
                android:background="#ff0000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/smartLoadingView"
                android:id="@+id/txt_button_follow"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="测试关注状态"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:background="#ff0000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_button_follow"
                android:id="@+id/txt_follow_true"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="设置为true"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:background="#ff0000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_follow_true"
                android:id="@+id/txt_follow_false"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="设置为false"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>