<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartLoadingView">
        <!-- 背景色（只支持颜色,不设置或者设置错误会走蓝色底） -->
        <!-- android:background="#ff00ff" -->

        <!-- 是否可被点击 -->
        <!-- android:enabled="true"-->

        <!-- 不可点击状态下背景色 -->
        <attr name="hl_unEnabled_background" format="color" />

        <!-- 圆角属性 -->
        <attr name="hl_corners_radius" format="dimension" />

        <!-- 文字滚动模式 -->
        <attr name="hl_ellipsize">
            <enum name="reverse" value="1" />
            <enum name="marquee" value="2" />
        </attr>

        <!-- 文字滚动速度，只有文字滚动时生效。这里是每个文子滚动出屏幕外所需的时间 -->
        <attr name="hl_ellipsize_speed" format="integer" />

        <!-- ***************************************** 重构中 ******************************************* -->

        <!--        错误文案-->
        <attr name="errorMsg" format="string" />
        <!--        错误背景颜色-->
        <attr name="background_error" format="color" />


        <attr name="click_mode">
            <!-- 正常的样式 -->
            <enum name="normal" value="1" />
            <!-- 隐藏的样式 -->
            <enum name="hide" value="2" />
            <!-- 平移到中间的样式-->
            <enum name="translate_center" value="3" />
            <!-- 走失败模式的样式-->
            <enum name="like_faile" value="4" />

        </attr>

    </declare-styleable>
</resources>